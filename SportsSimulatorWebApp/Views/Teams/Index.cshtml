@model IEnumerable<SportsSimulatorWebApp.Models.Team>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="teams">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamRating)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamRating)
        </td>
        <td>
            <button data-team-id="@item.id" class="btn-link js-details">Details</button>
        </td>
    </tr>
}

</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#teams .js-details').on("click", function () {
                $.ajax({
                    url: "/api/teams/" + $(this).attr("data-team-id"),
                    contentType: 'application/json; charset=utf-8',
                    method: "GET",
                    dataType: 'json',
                    processData: false,
                    success: function (html) {
                        alert(html);
                    }
                });
            });
        });

    </script>
}
