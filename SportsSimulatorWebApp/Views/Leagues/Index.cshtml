                        data: "Name",
                        render: function (data, type, league) {
                            return "<a href='/leagues/details/" + league.Id + "'>" + league.LeagueName + "</a>"
                        }
                    },
                    {
                        data: "CurrentRound"
                    },
                    {
                        data: "Id",
                        render: function (data) {
                            return "<a href='/leagues/edit/" + data + "'>Edit</a>"
                        }
                    },
