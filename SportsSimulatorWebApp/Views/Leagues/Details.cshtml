@model SportsSimulatorWebApp.Models.League

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>League</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LeagueName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LeagueName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LeagueEntries)
        </dt>

        <dd>
            @foreach (var item in Model.LeagueEntries)
            {
                @Html.DisplayFor(model => item.Team.TeamName)
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<p>
    <a class="btn btn-default" href="@Url.Action("CreateLeagueEntries","LeagueEntries", new { id = Model.id })">Add Teams to League &raquo;</a>
    
    <a class="btn btn-default" href="@Url.Action("CreateMatchups","Leagues", new { id = Model.id })">Create Matchups &raquo;</a>
</p>
