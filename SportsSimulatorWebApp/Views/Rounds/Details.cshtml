@model SportsSimulatorWebApp.Models.Round
@{
    ViewBag.Title = "Details";
}

<h2>Round @Model.RoundNumber Matchups</h2>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Matchup Number")
            </th>
            <th>
                @Html.DisplayName("Home Team")
            </th>
            <th>
                @Html.DisplayName("Away Team")
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @{var matchups = Model.Matchups;}
            @foreach (var matchup in matchups)
            {
            <tr>
                <td>
                    @Html.ActionLink(matchup.id.ToString(), "Details", "Matchups", new { matchup.id }, null)
                </td>
                <td>
                    @matchup.MatchupEntries.First().Team.TeamName
                </td>
                <td>
                    @matchup.MatchupEntries.Last().Team.TeamName
                </td>
            </tr>
        }
            </tr>
        </tbody>

    </table>