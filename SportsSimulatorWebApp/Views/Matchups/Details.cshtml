@model SportsSimulatorWebApp.Models.ViewModels.MatchupEventTimingViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Matchup @Model.matchup.id Details</h2>

@if(Model.hasBeenPlayed = 1)
{
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Event Timings")
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @{ var eventList = Model.eventTimings;}
                @foreach(var timing in eventList)
                {
                    <tr>
                        <td>@timing.EventTime</td>
                        <td>@timing.Event.EventName</td>
                    </tr>
                }
            </td>
        </tr>
    </tbody>
</table>
} 

<p>Matchup has not yet been played.</p>


